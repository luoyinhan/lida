.title {
  display: flex;
  size: 30px;
  justify-content: center;
  align-items: center;
  margin-top: 50px;
}
.icon-container{
    display: flex;
    flex-direction: row;
    width: 100%;
    height: auto;
    justify-content:center;
    align-items: center;
}
.icon {
  width: 50px;
  height: 50px;
  margin-top: 30px;
}
 .item{
  display: flex;
  flex-direction: column;
  padding:5px 15px;
  font-size: 14px;
  color:#333;
  position: relative;
  border-bottom: 1px solid #f3f3f3;
}